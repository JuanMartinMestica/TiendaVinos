<div class="sign-up-container">
    <div class="form-container">

        <h1 class="login-title">¡Ingresá tus datos para crear tu usuario!</h1>


        <form action="/auth/registro" method="post">


            <div class="input-row-container">
                <div class="input-row">
                    <div class="input-group input-row-element">
                        <input required type="text" name="nombre" autocomplete="off" id="nombre" class="input">
                        <label class="user-label">Nombre</label>
                    </div>
                    <div class="input-group input-row-element">
                        <input required type="text" name="apellido" autocomplete="off" id="apellido" class="input">
                        <label class="user-label">Apellido</label>
                    </div>
                </div>

                <div class="input-group">
                    <input required type="email" name="mail" autocomplete="off" id="mail" class="input">
                    <label class="user-label">Email</label>
                </div>

                <div class="input-group">
                    <input required type="password" name="contraseña" autocomplete="off" id="contraseña" class="input">
                    <label class="user-label">Contraseña</label>
                </div>

                <div class="input-group">
                    <input required type="password" name="confirmacion-contraseña" autocomplete="off" id="confirmacion-contraseña" class="input">
                    <label class="user-label">Repetir contraseña</label>
                </div>

                <div class="input-group">
                    <input required type="date" name="fecha_nacimiento" autocomplete="off" id="fecha_nacimiento" class="input">
                    <label class="user-label"></label>
                </div>

                <div class="input-row">
                    <div class="input-group input-row-element">
                        <input required type="text" name="direccion" autocomplete="off" id="direccion" class="input">
                        <label class="user-label">Dirección</label>
                    </div>
                    <div class="input-group input-row-element">
                        <input required type="text" name="telefono" autocomplete="off" id="telefono" class="input">
                        <label class="user-label">Teléfono</label>
                    </div>
                </div>

            </div>



            <button type="submit" class="button-add-cart login-btn">
                <span class="button-content-cart login-span ">Registrar     </span>
            </button>

        </form>



    </div>

    <div class="wine-waves-container">
        <div>
            <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
                    <defs>
                    <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
                    </defs>
                    <g class="parallax">
                        <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(109,0,0,0.7" />
                        <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(153,0,0,0.5)" />
                        <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(88,0,0,0.3)" />
                        <use xlink:href="#gentle-wave" x="48" y="7" fill="rgba(88,0,0,1)" />
                    </g>
                    </svg>
        </div>
    </div>

</div>